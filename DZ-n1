using namespace std;
int main()
{
setlocale(LC_ALL,"Ru");
double S,pi,R,L;
cout<<"Введите длину окружности: ";
cin>>L;
pi=3.14;
R = L / 2.0 * pi;
S = pow(pi, 2) * pow(R, 2)
cout<<"Площадь окружности = "<< S <<endl;
}

