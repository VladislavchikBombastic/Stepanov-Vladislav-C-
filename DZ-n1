#include <iostream>
#include <cmath>

int main()
{	
	setlocale(LC_ALL, "rus");
	int hours, minutes, seconds;
	cin >> seconds;
	hours = seconds / 3600;
	minutes = seconds / 60;
	cout << "Часы: " << hours << endl;
	cout << "Минуты: " << minutes << endl;

}
